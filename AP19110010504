 printf(" enter %d integers \n",n);
 for (a=0; a<n; c++)
 scanf("%d",&array[a]);
 printf("enter a number to search \n");
 scanf("%d",&search);
 for (a=0; a<n; a++) {
    if (array[c] == search) {
       printf("%d is present at location %d.\n",search,a+1);
       break;
    }
  }
  if (a==n)
  printf("%d isn't not present in the array.\n",search);
